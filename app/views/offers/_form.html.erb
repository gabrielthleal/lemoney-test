<%= form_with(model: offer, local: true) do |form| %>
  <% if offer.errors.any? %>
    <div>
      <% offer.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"> <%= message %></div>
      <% end %>
    </div>
  <% end %>
 
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :advertiser_name %>
      <%= form.text_field :advertiser_name, class: 'form-control', required: true %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :url %>
      <%= form.text_field :url, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', required: true %>
  </div>
 
  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label :starts_at %>
      <%= form.date_field :starts_at, class: 'form-control', required: true %>
    </div>

    <div class="form-group col-md-3">
        <%= form.label :ends_at %>
        <%= form.date_field :ends_at, class: 'form-control' %>
    </div>
  </div>  
  
  <div class="form-group form-check col-md-3">
    <%= form.label :premium %>
    <%= form.check_box :premium %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>

