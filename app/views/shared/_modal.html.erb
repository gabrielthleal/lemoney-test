<%
  modal = modal || {}
  title = modal[:title] || 'Modal Title'
  body = modal[:body] || '...'
  link_page = modal[:link_page] || '/'
  link_button_text = modal[:link_button_text] || 'Home'
%>

<div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalCenterTitle"><%= title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= body %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a href="<%= link_page %>" class="btn btn-primary"><%= link_button_text %></a>
      </div>
    </div>
  </div>
</div>